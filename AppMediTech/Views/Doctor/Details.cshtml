@model AppMediTech.Models.Doctor

<h2>Detalles del Doctor</h2>

<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.Nombre
        </dd>
        <dt class="col-sm-2">
            Apellido
        </dt>
        <dd class="col-sm-10">
            @Model.Apellido
        </dd>
        <dt class="col-sm-2">
            Especialidad
        </dt>
        <dd class="col-sm-10">
            @Model.Especialidad
        </dd>
        <dt class="col-sm-2">
            Experiencia
        </dt>
        <dd class="col-sm-10">
            @Model.Experiencia
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.DoctorID">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
