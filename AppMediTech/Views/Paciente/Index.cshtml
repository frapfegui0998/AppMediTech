@model IEnumerable<AppMediTech.Models.Paciente>

<h2>Pacientes</h2>

<p>
    <a asp-action="Create">Crear Nuevo Paciente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Edad</th>
            <th>Dirección</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Edad</td>
                <td>@item.Dirección</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PacienteID">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.PacienteID">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.PacienteID">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
