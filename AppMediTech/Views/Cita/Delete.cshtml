@model AppMediTech.Models.Cita

<h2>Eliminar Cita</h2>

<h3>¿Estás seguro de que quieres eliminar esta cita?</h3>
<div>
    <h4>Cita</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha
        </dt>
        <dd class="col-sm-10">
            @Model.Fecha
        </dd>
        <dt class="col-sm-2">
            Hora
        </dt>
        <dd class="col-sm-10">
            @Model.Hora
        </dd>
        <dt class="col-sm-2">
            Motivo
        </dt>
        <dd class="col-sm-10">
            @Model.Motivo
        </dd>
        <dt class="col-sm-2">
            Paciente
        </dt>
        <dd class="col-sm-10">
            @Model.Paciente.Nombre
        </dd>
        <dt class="col-sm-2">
            Doctor
        </dt>
        <dd class="col-sm-10">
            @Model.Doctor.Nombre
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="CitaID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
