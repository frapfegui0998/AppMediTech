@model AppMediTech.Models.Cita

<h2>Detalles de la Cita</h2>

<div>
    <h4>Cita</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha
        </dt>
        <dd class="col-sm-10">
            @Model.Fecha
        </dd>
        <dt class="col-sm-2">
            Hora
        </dt>
        <dd class="col-sm-10">
            @Model.Hora
        </dd>
        <dt class="col-sm-2">
            Motivo
        </dt>
        <dd class="col-sm-10">
            @Model.Motivo
        </dd>
        <dt class="col-sm-2">
            Paciente
        </dt>
        <dd class="col-sm-10">
            @Model.Paciente.Nombre
        </dd>
        <dt class="col-sm-2">
            Doctor
        </dt>
        <dd class="col-sm-10">
            @Model.Doctor.Nombre
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.CitaID">Editar</a> |
    <a asp-action="Index">Volver a la lista</a>
</div>
